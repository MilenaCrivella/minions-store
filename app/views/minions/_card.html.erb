<div class="row">
  <% minions.each do |minion| %>

    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%= minion.img %>" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= minion.nome %></h5>
            <p class="card-text"><%= minion.descricao %></p>
            <button class="btn btn-primary">Reservar
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
