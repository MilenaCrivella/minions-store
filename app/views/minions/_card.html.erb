<div class="row">
  <% minions.each do |minion| %>
    <div class="col card" style="width: 18rem;">
      <img class="card-img-top" src="<%= minion.img %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= minion.nome %></h5>
        <p class="card-text"></p>
        <a class='btn btn-primary' href='/reservar_minion'>Reservar</a>
      </div>
    </div>
  <% end %>
</div>
