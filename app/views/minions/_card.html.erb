<div class="row">
  <% minions.each do |minion| %>

    <div class="card mb-3 col-sm-12" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%= minion.img %>" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title" id="<%= minion.nome %>"><%= minion.nome %></h5>
            <p class="card-text"><%= minion.descricao %></p>
            <% if user_signed_in? %>
              <a class="button btn btn-primary" href="/reserva" id="<%= minion.reservado %>">Reservar</a>
            <% else %>
              <p class="card-text"><small class="text-muted">Fa√ßa login na plataforma para reservar o seu minion</small></p>
            <% end %>
              </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
